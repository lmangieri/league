pipeline {
	agent any
	tools {
        maven 'maven_3_5_4' 
    }
	stages  {
		stage('Compile Stage') {
			steps {
				sh "cd leagueapp"
				sh "mvn clean compile"
			}
		}
		stage('Testing Stage') {
			steps {
				sh "cd leagueapp"
				sh "mvn test"
			}
		}
		stage('Deployment Stage') {
			steps {
				sh "cd leagueapp"
				sh "mvn deploy"
			}
		}
	}
}